{
  "name": "client-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky install",
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "size": "npm run build && size-limit",
    "openapi-gen": "openapi-codegen xatabase",
    "build-example": "cd codegen && npm run example-ts && npm run example-js && cd .."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xataio/client-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xataio/client-ts/issues"
  },
  "homepage": "https://github.com/xataio/client-ts#readme",
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.21.1",
    "@openapi-codegen/cli": "^1.5.0",
    "@openapi-codegen/typescript": "^3.0.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "babel-jest": "^27.4.6",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.0",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "size-limit": "^7.0.8",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "codegen/src/*.{js,ts,tsx}": [
      "npm run build-example",
      "git add codegen/example"
    ],
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{css,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "client/dist/*"
    }
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "dist"
    ]
  }
}
