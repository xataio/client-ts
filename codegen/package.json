{
  "name": "@xata.io/codegen",
  "version": "0.3.0",
  "description": "Generates types based on a Xata.io database schema. Meant to be used with @xata.io/client",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && ncc build src/index.ts -m -o dist/cli",
    "prepack": "npm run build",
    "prebuild": "node -p \"'export const CODEGEN_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "example-ts": "npm run build && node --es-module-specifier-resolution=node dist generate example/xata -o example/xata.ts && sed -i '' 's|@xata.io/client|../../client/src|' example/xata.ts",
    "example-js": "npm run build && node --es-module-specifier-resolution=node dist generate example/xata -o example/xata.js && sed -i '' 's|@xata.io/client|../../client/src|' example/xata.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xataio/client-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xataio/client-ts/issues"
  },
  "homepage": "https://github.com/xataio/client-ts/blob/main/codegen/README.md",
  "dependencies": {
    "@vercel/ncc": "^0.33.3",
    "chalk": "5.0.1",
    "command-exists": "^1.2.9",
    "commander": "^9.1.0",
    "inquirer": "^8.2.2",
    "node-fetch": "^3.2.3",
    "ora": "6.1.0",
    "pluralize": "^8.0.0",
    "prettier": "^2.6.2",
    "tar": "^6.1.11",
    "unzipper": "^0.10.11",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/inquirer": "^8.2.1",
    "@types/node-fetch": "^2.6.1",
    "@types/pluralize": "^0.0.29",
    "@types/tar": "^6.1.1",
    "@types/unzipper": "^0.10.5",
    "@types/yargs": "^17.0.10"
  },
  "bin": {
    "xata-codegen": "./dist/cli/index.js"
  }
}
